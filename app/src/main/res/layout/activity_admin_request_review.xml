<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminRequestReview">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_margin="8dp"

      >



      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_margin="8dp"

          android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Name :"
              android:textSize="20sp"
              />

          <TextView

              android:id="@+id/lbl_AdmReqRev_FarmerName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"

          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Address:"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FarmerAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>




      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Rs no/Gat No:"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FarmerGatNo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>



      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Type of Land:"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FarmerLandType"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>




      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Area of Land:"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FarmerLandArea"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Type of Sugarcane:"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FormSugarCaneType"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>



      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date of Submission:"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FarmerSubDate"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>




      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Location :"
              android:textSize="20sp"
              />

          <TextView
              android:id="@+id/lbl_AdmReqRev_FarmerLocation"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:onClick="dispFarmLocation"
              android:textStyle="bold"
              android:text="Show Location"

              android:layout_margin="3dp"
              />


      </LinearLayout>






      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="8dp"

          >


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:textStyle="bold"
              android:textColor="#FF3031"
              android:text="Image of Farm"
              />



          <android.support.v7.widget.AppCompatImageView

              android:id="@+id/Imgvw_AdmReqRev_FarmImg"
              android:layout_width="400dp"
              android:layout_height="400dp"
              android:layout_margin="5dp"
              android:layout_gravity="center"
              />




      </LinearLayout>



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="8dp"

          >


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:text=" Image of 7/12 of the farm."
              />





          <android.support.v7.widget.AppCompatImageView

              android:id="@+id/Imgvw_AdmReqRev_SatBaraImage"
              android:layout_width="400dp"
              android:layout_height="400dp"
              android:layout_margin="5dp"
              android:layout_gravity="center" />




      </LinearLayout>



      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Remark :"
              android:textSize="20sp"
              />

          <EditText
              android:id="@+id/txt_AdmReqRev_FormRemark"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"

              android:layout_margin="3dp"
              />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          >


          <RadioGroup
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/RdoGrp_AdmReqRev_Status"

              >


              <RadioButton
                  android:id="@+id/RdoBtn_AdmReqRev_approve"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Approve"

                  android:layout_weight="1"
                  android:textColor="@color/colorPrimary"
                  android:textSize="22sp"
                  android:onClick="RdbStatusCheck"
                  />



              <RadioButton
                  android:id="@+id/RdoBtn_AdmReqRev_reject"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Reject"
                  android:layout_weight="1"
                  android:textColor="#FF3031"
                  android:textSize="22sp"
                  android:onClick="RdbStatusCheck"

                  />




          </RadioGroup>







      </LinearLayout>



<Button
    android:background="@color/colorPrimary"
    android:textColor="#ffffff"
    android:id="@+id/btn_AdmReqRev_FormConfirm"
    android:textSize="20sp"
    android:layout_margin="3dp"
    android:text="Confirm"
    android:layout_width="match_parent"
    android:onClick="ReviewForm"
    android:layout_height="wrap_content"
    />



  </LinearLayout>


    </ScrollView>

</LinearLayout>